<odoo>
    <record id="res_partner_view_form_inherit_characteristics" model="ir.ui.view">
        <field name="name">res.partner.view.form.inherit.characteristics</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">

            <xpath expr="//notebook" position="inside">
                <page string="Characteristics">
                    <group>
                        <group string="General Information">
                            <field name="time_code" />
                            <field name="who_cuts" />
                        </group>
                        <group string="Sector &amp; Channel">
                            <field name="sector_code" />
                            <field name="subsector_code" />
                            <field name="channel_code" />
                        </group>
                        <group string="Unit Identifiers">
                            <field name="fabric_unit" />
                            <field name="truck_unit" />
                        </group>
                        <group string="Potential Codes">
                            <field name="commercial_potential_code" />
                            <field name="commercial_potential_direction_code" />
                            <field name="future_potential_code" />
                        </group>
                    </group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>
